{
    "name": "juststeveking/config-loader",
    "description": "A simple to use configuration loader for PHP",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "role": "Author",
            "name": "Steve McDougall",
            "email": "juststevemcd@gmail.com",
            "homepage": "https://www.juststeveking.uk/"
        }
    ],
    "autoload": {
        "psr-4": {
            "JustSteveKing\\ConfigLoader\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "JustSteveKing\\ConfigLoader\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "juststeveking/config": "^2.0",
        "pestphp/pest": "^1.8",
        "spatie/ray": "^1.26",
        "vimeo/psalm": "^4.8"
    },
    "scripts": {
        "analyze": "./vendor/bin/psalm --show-info=true",
        "test": "./vendor/bin/pest",
        "test-coverage": "./vendor/bin/pest --coverage"
    },
    "scripts-descriptions": {
        "analyze": "Run static analysis checks on codebase.",
        "test": "Run pestPHP test suite on codebase.",
        "test-coverage": "Run pestPHP test suite with coverage flag on codebase."
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "preferred-install": "dist"
    }
}
